@model ProjectCalidadSoft.Models.Paciente

@{
    ViewData["Title"] = "Edit";
}

<h1> @Model.Nombre</h1>

<h4>Paciente</h4>
<hr />

<div id="PlaceHolderHere"></div>

<div class="card">
    <div class="card-header text-right">

        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addDiagnosis" data-url="@Url.Action("CreatePopup","Diagnostico", new { id = Model.Id.ToString()})">Añadir Diagnostico </button>
        
    </div>
    <div class="card-body">
        <h5 class="card-title">Diagnosticos del Paciente @Model.Nombre</h5>
        @if (ViewBag.diagnostico != null) {
        <ul>
        @foreach (var std in ViewBag.diagnostico as List<ProjectCalidadSoft.Controllers.QueryDiagnostico>)
        {
            <li>
                @std.codigoCie  @std.descripcion  @std.fecha
            </li>
        }
        
        </ul>
        }
    </div>
</div>
<hr />




<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Recipient:</label>
                        <input type="text" class="form-control" id="recipient-name">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Message:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </div>
</div>


